<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>DomainFilter</filter-name>
        <filter-class>cswl.studentmanagement.filters.DomainFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>cswl.studentmanagement.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DomainFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>AdminController</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>cswl.studentmanagement.controllers.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseController</servlet-name>
        <servlet-class>cswl.studentmanagement.controllers.CourseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/Admin/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseController</servlet-name>
        <url-pattern>/Admin/Course/Add</url-pattern>
        <url-pattern>/Admin/Course/Display</url-pattern>
        <url-pattern>/Admin/Course/Edit</url-pattern>
        <url-pattern>/Admin/Course/Update</url-pattern>
        <url-pattern>/Admin/Course/Delete</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
